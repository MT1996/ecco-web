FROM ubuntu:latest

RUN apt -y update && \
  apt -y autoremove && \
  apt -y upgrade && \
  apt -y dist-upgrade && \
  apt -y full-upgrade && \
  apt -y autoremove && \
  apt -y install \
  nodejs nodejs-legacy npm && \
  apt clean && \
  rm -rf /var/lib/apt/lists/* && \
  rm -rf /var/log/journal/* && \
  rm -rf /var/cache/abrt-di/*
